<div class="headtitle">
	<div class="headtxt">Returned Items</div>
</div>
<div >
	<table id="assigned_item_row" class="listing" width="100%" cellspacing=0 cellpadding=0>
		<thead class="lhead">
			<th width="80%">Name</th>
			<th width="15px" align='center'>RQty</th>
			<th width="15px" align='center'>Returned At</th>
		</thead>
		<tbody class="box">
		  <% for item in returned_items %>
		    <tr class="<%= cycle('odd','')%>" >	
			    <td>
			      <%= item.item.name %>
			      <div class="ssub">
			        Brand:<%= item.item.brand.name if item.item.brand %> / Type: <%= item.item.type_of %><br />
			        Serial Number: <b><%= item.item.serial_number %></b> / Barcode: <b><%= item.item.barcode %></b>
  					    
  					</div>
			    </td>
			    <td align="center"><%= item.qty %></td>
			    <td>
			      <div style="font-size:10px">
			        <%= item.returned_at.strftime("%b %d, %Y at %l:%m %p") %> by
			        <%= item.recieved_by ? item.recieved_by.name : 'N/A' %>
			      </div>
			    </td>
			  </tr>
		  <% end %>
		</tbody>
	</table>
	<div id="row">
		
	</div>
	<div class="list-footer"></div>
</div>