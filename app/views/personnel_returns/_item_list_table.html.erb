<table class="listing" width="100%" cellspacing=0 cellpadding=0>
	<thead class="lhead">
		<th>Employee Name</th>
		<th width="30%"></th>
		<th width="10px">&nbsp;</th>
	</thead>
	<tbody>
		<% for employee in @employees do %>
			<tr class="<%= cycle('odd','')%>" >					
				
				<td>
				  <b><%= employee.employee.full_name %></b>
				</td>
				<td></td>
				<td>
		<span>
           	<%= link_to_remote image_tag('icons/options.gif',:title => 'Assign' ),
           	                    :url => {:action => 'listing', :id => employee.employee.id } %>           	                    
          </span>
				</td>
			</tr>				
		<%end%>
	</tbody>
</table>
<div class="list-footer"></div>