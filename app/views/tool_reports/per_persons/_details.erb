<style>
 table th {
	 text-align: left; 
	 border-bottom: 1px solid #d7d7d7; 
	 border-top: 1px solid #d7d7d7;
 }
</style>

<div align = "left">
	<table align="left" style="font-size: 12pt" cellspacing="1" cellpadding="5">
	
	<thead>
		<th>Barcode</th>
		<th>Picture</th>
		<th>Serial No.</th>
		<th>Tool/Equipment</th>
		<th>Description</th>
		<th>Borrowed Qty</th>
		<th>Measurement</th>
		<th>Brand</th>
		<th>Remarks</th>
	</thead>
	<tbody>
		<% for item in @borrowed_items do %>
			<% if item.item.type_of == Item::ITEMTYPE %>
			<tr class="<%= cycle('odd','')%>" >
				<td><%= item.item.barcode if item.item.barcode %></td>			
				<td>&nbsp</td>
				<td>
					 <%= item.item.serial_number if item.item.serial_number %> 
				</td>
				<td>
					<%= item.item.name if item.item.name %>
				</td>
				<td>
					<%= item.item.comments if item.item.comments %>
				</td>
				<td align="center">
				<%= item.qty if item.qty %>
				</td>
				<td>
					<%= item.item.measurement.name if item.item.measurement %>
				</td>
				<td>
				  <%= item.item.brand.name if item.item.brand %>
				</td>		
				<td align='center'><%= item.item.status if item.item.status %></td>
			</tr>		
			<%end%>		
		<%end%>
	</tbody>
	</table>
</div>
