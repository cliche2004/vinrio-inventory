<div class="headtitle">

	<div class="headtxt">Item Master</div>
	<div style="padding: 3px 10px;float:right">
		    <%= link_to_box image_tag('export-icon.gif', :title=>'export to CSV' ), 'reports/item_masters/export_list' %>
	</div>
 <br>	
</div>
 
<table class="listing" cellpadding="0" cellspacing="0" width="100%">
	<thead class="lhead">
		<th>Barcode</th>
		<th>Picture</th>
		<th>Serial No.</th>
		<th>Tool/Equipment</th>
		<th>Description</th>
		<th>StockOnHand</th>
		<th>Measurement</th>
		<th>Brand</th>
		<th>Remarks</th>
	</thead>
	<tbody>
		<% for item in @items do %>
			<tr class="<%= cycle('odd','')%>" >
				<td align='center'><%= item.barcode %></td>			
				<td align='center'> </td>
				<td>
					 <%= item.serial_number %> 
				</td>
				<td>
					<%= item.name %>
				</td>
				<td>
					<%= item.comments %>
				</td>
				<td>
				<%= item.current_qty %> 	
				</td>
				<td>
					<%= item.measurement.name if item.measurement %>
				</td>
				<td>
				  <%= item.brand.name if item.brand %>
				</td>		
				<td align='center'><%= item.status %></td>
			</tr>				
		<%end%>
	</tbody>
</table>
<div class="list-footer"></div>
<div style="clear:both"></div>
