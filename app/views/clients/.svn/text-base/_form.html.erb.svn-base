<div id="message_area" style="display:none"></div>		
<div id="form-container">

	<div class="header-text">
	
		<div >Client Details</div>
	</div>
	<div class="border-filler"></div>
	
	<div class="field-holder">
		<div id="form-label">
			Client<br /> Name:
		</div>
		<div id="form-field">
			<%= text_field :client, :name, :size=>"67*39" %>
		</div>
	
	</div>
	
  <div class="field-holder">
		<div id="form-label">
			Contact Person:
		</div>
		<div id="form-field">
			<%= text_field :client, :contact_person, :size=>"67*39" %>
		</div>
	
	</div>	
	
	<div class="field-holder">
 		<div id="form-label">
 			Contact Details:
 		</div>
 		<div id="form-field">
 			<%= text_field :client, :contact_details, :size=>"67*39" %>
 		</div>

 	</div>
	

</div>
