<div id="message_area" style="display:none"></div>		
<div id="form-container">

	<div class="header-text">
	
		<div >Supplier Contact Detail</div>
	</div>
	<div class="border-filler"></div>
	
	<div class="field-holder">
		<div id="form-label">
			Name:
		</div>
		<div id="form-field">
			<%= text_field :supplier_contact, :name, :size=>"67*39" %>
			<%= hidden_field :supplier_contact, :supplier_id, :size=>"67*39", :value => @supplier_id %>
			<%= hidden_field :supplier_contact, :id %>
		</div>
		<div class="field-holder">
			<div id="form-label">
				Type:
			</div>
			<div id="form-field">
				<%= collection_select(:supplier_contact, :contact_type_id, @types, :id, :name, {} , :style => 'width: 300px') %>			
			</div>
		</div>
	</div>

</div>
