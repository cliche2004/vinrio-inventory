<div class="headtitle">
		<div class="headtxt">Supplier Contact Listing</div>
</div>
<div >
	<table class="listing" width="100%" cellspacing=0 cellpadding=0>
		<thead class="lhead">
			<th width="25px" align='center'>ID</th>
			<th>Name</th>
			<th>Type</th>
			<th></th>
		</thead>
		<tbody>
			<% for contact in @contacts do %>
				<tr class="<%= cycle('odd','')%>">					
					<td><%= contact.id%></td>
					<td><%= contact.name %></td>
					<td><%= contact.contact_type.name %></td>
					<td style="float:right;">
					<span>
					<%= link_to_remote image_tag('icons/edit.gif',:title=>'Update' ),
								:url => {:action => 'ajax_edit', :id => contact.id } %>
					<%= link_to_remote image_tag('icons/delete.png',:title=>'Delete' ),
								:url => {:action => 'ajax_delete', :id => contact.id }, 
								:confirm => 'Are you sure to delete?' %>
	                </span>
					</td>
				</tr>				
			<%end%>
		</tbody>
	</table>
	<div class="list-footer"></div>
</div>
