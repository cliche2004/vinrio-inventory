<div class="headtitle">
	<div class="headtxt">Item to be Assign</div>
</div>
<div >
	<table id="assigned_item_row" class="listing" width="100%" cellspacing=0 cellpadding=0>
		<thead class="lhead">
			<th width="70%">Name</th>
			<th width="15px" align='center'>Price</th>
			<th width="15px" align='center'>Qty</th>
			<th width="15px" align='center'>History</th>
			<th>&nbsp;</th>
		</thead>
		<tbody class="box">
		<% if(@header) %>
		    <% for detail in @header.details do %>
				<tr class="<%= cycle('odd','')%>" >		
  				<td>
  				    <b><%= detail.item.name if detail.item %></b>
  				</td>
  				<td align=center>
  					<input type='text' value='<%= detail.unit_price %>' style='text-align: center;' size='5' name='items[][unit_price]' id='unit_price'>
  				</td>
  				<td align=center>
  					<input type='text' value='<%= detail.qty %>' style='text-align: center;' size='5' name='items[][qty]' id='item_qty'>
  					<input type='hidden' value='<%= detail.item.id if detail.item %>' name='items[][item_id]'>
  				</td>
  				<td></td>
  				<td>
  				  <%= link_to_function image_tag('delete.png'), "remove_po_assigned_item(" + detail.item_id.to_s + ")" %>
  				</td>
  			</tr>			
			<% end %>
		<% end %>
		</tbody>
	</table>
	<div id="row">
		
	</div>
	<div class="list-footer"></div>
</div>