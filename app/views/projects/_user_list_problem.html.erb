<div class="headtitle">
	<div class="headtxt">Employee Problem Listing</div>
	
</div>
<table class="listing" width="100%" cellspacing=0 cellpadding=0>
	<thead class="lhead">
		<th width="20%">Employee Name</th>
		<th>Report</th>	
	</thead>
	<tbody>
	  
		<% for problem in @problems do %>
			<tr class="<%= cycle('odd','')%>" >					
				<td>
				  <%= problem.employee.full_name if problem.employee %>
				  <div class="ssub">
				    <%= problem.employee.designation if problem.employee %>
				  </div>
				</td>	
				<td valign='top' ><%= problem.report %></td>												
			</tr>			
			
		<% end %>
		
	</tbody>
</table>
<div class="list-footer"></div>