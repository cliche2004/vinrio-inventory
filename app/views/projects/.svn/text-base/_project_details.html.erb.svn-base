<div class="header-text">
	<div style="width:100px">Project Details</div>
</div>
<div>
	<div class="field-holder">
		<div id="form-label">
			Project No:
		</div>
		<div id="form-field">					
			<%= text_field :project, :project_unique_id, :disabled => true, :size=>"40*39"%> 					
		</div>
	</div>
	
  <div style="clear:both"></div>
  
  <div class="field-holder">
		<div id="form-label">
			Client:
		</div>
		<div id="form-field">
			<%= text_field :project, :client_id, :disabled => true , 
			  :size=>"65*39", :value => (@project.client ? @project.client.name : 'N/A') %>
		</div>
	</div>
	<div style="clear:both"></div>
	
	<div class="field-holder">
		<div id="form-label">
			Assigned Engineer:
		</div>
		<div id="form-field" style="padding-top:5px">
			<%= text_field :project, :assigned_employee_id, :disabled => true , 
			      :size=>"26*39", :value => (@project.assigned_user ? @project.assigned_user.full_name : 'N/A') %>
		</div>
	</div>
	<div style="clear:both"></div>
	
  
  
	<div class="field-holder">
		<div id="form-label">
			Profit:
		</div>
		<div id="form-field">
			<%= text_field :project, :profit_margin, :disabled =>true , :size=>"26*39",
			      :value => number_to_currency(@project.profit_margin, :unit => 'P') %>
		</div>
	</div>
	<div style="clear:both"></div>

	<div class="field-holder">
		<div id="form-label">
			Start Date:
		</div>
		<div id="form-field">
			<%= text_field :project, :start_date, :disabled =>true , :size=>"26*39" %>
		</div>
	</div>
	
	<div class="field-holder">
		<div id="form-label">
			End Date:
		</div>
		<div id="form-field">
			<%= text_field :project, :estimated_end_date, :disabled =>true, :size=>"26*39" %>
		</div>
	</div>
	
	<div class="field-holder">
		<div id="form-label">
			Test:
		</div>
		
		<div id="form-field">					
			<%= check_box :project, :is_test, :disabled =>true  %>	
		</div>
	</div>
	
	<div class="field-holder">
		<div id="form-label">
			Active:
		</div>
		<div id="form-field">
			<%= check_box :project, :is_active, :disabled =>true  %>
		</div>
	</div>
	
	<div style="clear:both"></div>
	
</div>
<br/>