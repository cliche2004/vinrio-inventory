<div class="header-textproj">
	<div style="width:400px">Employee Assigned to this Project</div>
	<div class="border-filler"></div>
</div>

<div id="user_assigned_list_table">
	<table class="listing" width="100%" cellspacing=0 cellpadding=0>
		<thead class="lhead">
			<th>Employee Name</th>
			<th width="10%">Designation</th>
			<th width="5%">Active</th>
			<th width="15px">&nbsp;</th>
		</thead>
		<tbody>
			<% for user in @assigned_users do %>
				<tr class="<%= cycle('odd','')%>" >					
					<td><%= user.employee.full_name if user.employee %></td>
					<td><%= user.employee.designation if user.employee %></td>
					<td><%= user.status %></td>
					<td align='right'>
						<span>
	              <%= link_to_remote image_tag('icons/delete.png',:title=>'Delete' ),
                    :url => { :action => 'delete_assigned_user', 
                              :id => user.id, :project_id => @project.id }, 
                    :confirm => 'Are you sure to delete?' %>
		        </span>
					</td>
				</tr>				
			<% end %>
		</tbody>
	</table>
	<div class="list-footer"></div
</div>



