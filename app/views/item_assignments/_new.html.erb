<div class="item-container" id="formHolder">	
	<div id="form-container">
		<div class="header-textproj">
			<div style="width:100px">Projects Details</div>
			<div class="border-filler"></div>
		</div>
		
		<div class="field-holder">
			<div id="form-label">
				Project Name :
			</div>
 			<div id="form-field" style="padding-top:10px">
				
				<%= select(:header, :project_id, @projects.collect {|p| [ "#{p.project_unique_id} - #{p.client.name}", 
				              p.id ] }, { :include_blank => false }, :style => 'width: 400px;font-size:16px')
         %>
			</div>
		</div>
		
		<div id="borrower_list">
	    <%= render 'form_borrower_name' %>
	  </div>
	  
		<div style="clear:both"></div>
		
		<div class="field-holder">
			<div id="form-label">
				Comment :
			</div>
			<div id="form-field">
				<%= text_area :header, :comment, :style=>"width: 408px;height: 50px;" %>
			</div>
		</div>
		
		<div class="field-holder">
			<div id="form-label">
				Prepared By: 
			</div>
			<div id="form-field">
		    <input type='hidden' value='<%= current_user.id %>' name='header[user_id]'>
				<%= text_field :id, :user_id, :disabled => true, :value => "#{current_user.name} @ #{Time.now.strftime('%Y/%m/%d')}" %> 
			</div>
		</div>
  </div>
<div style="clear:both"></div>

<script type="text/javascript" charset="utf-8">
  $("#header_project_id").change(function(){
    var project_id = $('#header_project_id').val();
    updateBorrowerSelect(project_id);
  })
  
  $("#header_employee_id").change(function(){
    var project_id = $('#header_project_id').val();
    var employee_id = $('#header_employee_id').val();
    updateBorrowedItem(project_id, employee_id);
    
  })
  
</script>
								
						
			
			