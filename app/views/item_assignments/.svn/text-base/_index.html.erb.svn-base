<div class="tcontent">
  <div id="hlist">
	<div class="topheadtitle">
		<div class="headtxt">Project Item Assignment</div>
	</div>	
	
	<%#= form_remote_tag(:url => {:action => "ajax_create"}, :onSubmit => "return false") %>			
	<%= form_tag("#", :onSubmit => 'return false', :id => "item_assignment_form") %>
  	<div class="submenu">
  	  <%= link_to_remote image_tag("list-btn.jpg", :title=> 'View Project Borrowed List' ), :url => {:action => 'ajax_list' } %>
  		<div class="border-filler" style="margin:0"></div>
  	</div>

		<%= render :partial => "new" %>
		
		<div class="border-filler"></div>
		
		<div class="lcontent" id="item_list">
			<%= render :partial => "item_list" %>
		</div>
		
	  <% if current_user.is_admin? %>
	  	<div>
  			<%= image_tag "create-btn.png", :id => "submitItemAssigmentBtn", :style => "cursor:pointer" %>
  		</div>
  	<% end %>
		
		<div class="lcontent" id="list">
			<%= render :partial => "assign_item_list" %>
		</div>
		
		
		<br /><br /><br />
		
		<div>
		  <%= render :partial => "user_project_items" %>
		</div>
		
	</form>
</div>
</div>
<script type="text/javascript" charset="utf-8">
  
  $('#search').focus();
  
  var project_id = $('#header_project_id').val();
  var employee_id = $('#header_employee_id').val();
  updateBorrowedItem(project_id, employee_id);

  $("#submitItemAssigmentBtn").click(function(){
    	assignItemToEmployee();
  })
  
  
</script>
