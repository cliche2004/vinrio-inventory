<style>
table {
	 font-family: 'Tahoma','Lucida Grande';
}
table th {
	text-align: left; 
	border-bottom: 1px solid #d7d7d7; 
	border-top: 1px solid #d7d7d7;
}
</style>


<div align = "left">
	 <div class="title" align = "left"><strong>VINRIO CONSTRUCTION CORP.</strong></div>
	 <div align = "left">
	 	Mabolo St. CEBU CITY <br />
	 	Tel   <br />
	 	Purchased (Summary) - For The Period Of <%= Date.today.strftime('%d%b%y') %><br />
		Prepared by <b><%= @header.user.name %></b><br />
		Supplier <b><%= @header.supplier.name %></b>
</div>
<br>
<br>
<table style="font-size: 10pt;width:100%" align="left" cellspacing="0" cellpadding="4">

<thead>
			<th align="left"><nobr>Name</nobr></th>
			<th align='left'><nobr>Price</nobr></th>
			<th align='left'><nobr>Qty</nobr></th>
			<th align='left'><nobr>Total</nobr></th>
</thead>

		<tbody >
		<% if(@header) %>
		<%  total = 0 
		    for detail in @header.details do  
		          total += (detail.qty * detail.unit_price) %>
				<tr>		
  				<td>
  				    <b><%= detail.item.name if detail.item %></b>
  				</td>
  				<td>
  					<%= detail.unit_price.to_i %>
  				</td>
  				<td>
  					<%= detail.qty %>
  				</td>
  				<td>
  				  <%= (detail.qty * detail.unit_price.to_i) %>
  				</td>
  			</tr>			
			<% end %>
		<% end %>
</tbody>
</table>

<br><br><br>
	<div style="text-align:left;border-top: 1px dashed black; border-bottom: 1px dashed black; width: 240px; padding: 4px; float: right">
	<b>SUB TOTAL : &nbsp; &nbsp;&nbsp;	<%= total.to_i %></b>

