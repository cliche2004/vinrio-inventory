<div id="message_area" style="display:none"></div>
<div id="form-container" style='width:360px'>
	<% @user.password = @user.password_confirmation = nil %>
	<%= error_messages_for :user %>
		
		<div class="header-text">
			<div style='text-align:left;'>Creating Account</div>
		</div>
			<div class="border-filler"></div>
				<div class="field-holder">
						<div id="form-label"style="width: 110px;">
							Name:
						</div>
						<div id="form-field">
							<%= text_field :user, :name, :size=>"20*39" %>
						</div>
				</div>
				<div class="field-holder">
						<div id="form-label" style="width: 110px;">
							Username:
						</div>
						<div id="form-field">
							<%= text_field :user, :login, :size=>"25*39" %>
						</div>
				</div>
				<div class="field-holder">
						<div id="form-label" style="width: 110px;">
							Email:
						</div>
						<div id="form-field">
							<%= text_field :user, :email, :size=>"25*39" %>
						</div>
				
				</div>
				<div class="field-holder">
						<div id="form-label" style="width: 110px;">
							Password:
						</div>
						<div id="form-field">
							<%= password_field :user, :password, :size=>"25*39" %>
						</div>
				
				</div>
				<div class="field-holder">
						<div id="form-label" style="width: 110px;">
							Confirm Password:
						</div>
						<div id="form-field">
							<%= password_field :user, :password_confirmation, :size=>"25*39" %>
						</div>
				</div>
				<div class="field-holder">
						<div id="form-label" style="width: 110px;">
						Type
						</div>
						<div id="form-field">
						  	<%= select(:user, :itype, User::TYPE, {}) %>
						</div>
				</div>
			
</div>
