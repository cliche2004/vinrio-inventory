<div class="headtitle">
	<div class="headtxt">Measurement Listing</div>
</div>
<div >
	<table class="listing" width="100%" cellspacing=0 cellpadding=0>
		<thead class="lhead">
			<th>Measurement Name</th>
			<th></th>
		</thead>
		<tbody>
			<% for unit in @units do %>
				<tr class="<%= cycle('odd','')%>">
					<td><%= unit.name %></td>
					<td style="float:right;">
					<span>
	 	             	<%= link_to_remote image_tag('icons/edit.gif',:title=>'Update' ),
	 	             	                    :url => {:action => 'ajax_edit', :id => unit.id } %>
                            	<%= link_to_remote image_tag('icons/delete.png',:title=>'Delete' ),
	 	             	                    :url => {:action => 'ajax_delete', :id => unit.id }, 
											:confirm => 'Are you sure to delete?' %>
	 	             	                    
	                </span>
					</td>
				</tr>				
			<%end%>
		</tbody>
	</table>
	<div class="list-footer"></div>
</div>
