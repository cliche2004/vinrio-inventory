<div class="headtitle">
	<div class="headtxt">Storage / Location Listing</div>
</div>
<div>
	<table class="listing" width="100%" cellspacing=0 cellpadding=0>
		<thead class="lhead">
			<th>Storage / Location Name</th>
			<th></th>
		</thead>
		<tbody>
			<% for storage_location in @storage_locations do %>
				<tr  class="<%= cycle('odd','')%>">					
					<td><%= storage_location.name %></td>
					<td style="float:right;">
						<span>
		 	             	<%= link_to_remote image_tag('icons/edit.gif',:title=>'Update' ),
		 	             	                    :url => {:action => 'ajax_edit', :id => storage_location.id } %>
	                            	<%= link_to_remote image_tag('icons/delete.png',:title=>'Delete' ),
		 	             	                    :url => {:action => 'ajax_delete', :id => storage_location.id }, 
												:confirm => 'Are you sure to delete?' %>
		                </span>
					</td>
				</tr>				
			<%end%>
		</tbody>
	</table>
	<div class="list-footer"></div>
</div>

