<div class="headtitle">

	<div class="headtxt">Item Listing</div>
	<div style="padding-left:230px;padding-top:2px">
			<%= render :partial => "search" %>
	</div>
</div>

<table class="listing" cellpadding="0" cellspacing="0" width="100%">
	<thead class="lhead">
		<th width="25px" align='center'>ID</th>
		<th>Name</th>
		<th width="30%">Brand</th>
		<th width="10%">Type</th>
		<th align='center' width="10%">CQty</th>
		<th width="8%"></th>
	</thead>
	<tbody>
		<% for item in @items do %>
			<tr class="<%= cycle('odd','')%>" >					
				<td align='center'><%=item.id%></td>
				<td>
					<%= item.name %>
					<div class="ssub">
					    serial #:<%= item.serial_number %> <br />
					    barcode #:<%= item.barcode %>
					</div>
				</td>
				<td>
				  <%= item.brand.name if item.brand %>
				</td>
				<td><%= item.type.name if item.type %></td>				
				<td align='center'><%= item.current_qty %></td>
				<td align='right'>
					<span>
           	<%= link_to_remote image_tag('icons/edit.gif',:title=>'Update' ),
           	                    :url => {:action => 'ajax_edit', :id => item.id } %>
                 	<%= link_to_remote image_tag('icons/delete.png',:title=>'Delete' ),
           	                    :url => {:action => 'ajax_delete', :id => item.id }, 
							:confirm => 'Are you sure to delete?' %>
	        </span>
				</td>
			</tr>				
		<%end%>
	</tbody>
</table>
<div class="list-footer"></div>
<div style="clear:both"></div>
