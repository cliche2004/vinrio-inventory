<div>
	<div id="image-container" align="center" >
		<%= image_tag 'image_bg.png' %>
	</div>
		
	<div id="form-container">

		<div class="header-text">
			<div style="width:100px">Item Details</div>
		</div>

		<div class="border-filler"></div>
		<div class="field-holder">
			<div id="form-label">
				Serial no:
			</div>
			<div id="form-field">
				<%= text_field :item, :serial_number,:size=>"45*39" %>
			</div>
		</div>
			
		<div class="field-holder">
			<div id="form-label">
				Name:
			</div>
			<div id="form-field">
				<%= text_field :item, :name, :size=>"67*39" %>
			</div>
		</div>
			
		<div class="field-holder">
			<div id="form-label">
				Type:
			</div>
			<div id="form-field">
			    <%= collection_select(:item, :type_id, @type, :id, :name) %>
			</div>
		</div>
	
		<div class="field-holder">
			<div id="form-label">
				Description:
			</div>
			<div id="form-field">     
              		 <%= text_area("item","comments", "rows" => 5, "cols" => 1, :style => "width: 408px;")%>
			</div>
		</div>
		<div style="clear:both"></div>

		<div class="header-text" style="margin-top:14px;" >Inventory Details</div>
		<div class="border-filler"></div>


