<div class="headtitle">

	<div class="headtxt">Per-Project</div>
	<div style="padding: 3px 10px;float:right">
		    <%= link_to_box image_tag('export-icon.gif', :title=>'export to CSV' ), 'reports/per_projects/export_list' %>
	</div>
</div> 

<% for project in @projects do %>
			<% 
				@disbursements = project.item_disbursements
			 %>
			<div style="margin: 5px 5px;">
						Project No: <strong><%= project.project_unique_id if project %></strong>
			</div>
<table class="listing" cellpadding="0" cellspacing="0" width="100%">
	<thead class="lhead">
	    <th>Borrowers Name</th>
		<th>Date Borrowered</th>
		<th>Released By</th>
		<th>Expiration</th>
		<th>Accepted By</th>
		<th>Remarks</th>
		<th></th>
	</thead>
	<tbody>
		
			<% for disbursement in @disbursements do %>
				<tr class="<%= cycle('odd','')%>" >
						<td>
						     <%= disbursement.user.name if disbursement.user %>
						</td>	
						<td>
							<%= disbursement.project.start_date.strftime('%Y/%m/%d') if disbursement.project %>  
						</td>	
						<td>
							 <%= disbursement.user.name if disbursement.user %> 
						</td>
						<td>
						    <%= disbursement.project.estimated_end_date.strftime('%Y/%m/%d') if disbursement.project  %>
						</td>	
						<td>
						    
						</td>
						<td>
						   
						</td>				
						<td align='center'>
						    <%= link_to_remote image_tag('icons/list_16.gif',:title=>'Details' ),
	 	             	                    :url => {:controller => '/reports/per_projects', :action => 'ajax_details', :id => disbursement.id } %>         
						</td>
				</tr>
			<%end%>			

	</tbody>
</table>
<%end%>
<div class="list-footer"></div>
<div style="clear:both"></div>
