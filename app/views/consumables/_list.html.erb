<div class="headtitle">

	<div class="headtxt">Consumable Listing</div>
	<div style="padding-left:230px;padding-top:2px">
			<%= render :partial => "search" %>
	</div>
</div>

<table class="listing" cellpadding="0" cellspacing="1" width="100%">
	<thead class="lhead">
		<th>Consumable Name</th>
		<th width="15%">Brand</th>
		<th width="15%">Serial#</th>
		<th width="15%">BarCode</th>
		<th align='center' width="5%">CQty</th>
		<th width="5%"></th>
	</thead>
	<tbody>
		<% for item in @items do %>
			<tr class="<%= cycle('odd','')%>" >
				<td>
					<%= item.name %>
				</td>
				<td>
				  <%= item.brand.name if item.brand %>
				</td>
				<td>
				  <%= item.serial_number %>
				</td>
				<td>
				  <%= item.barcode %>
				</td>	
				<td align='center'><%= item.current_qty %></td>
				<td align='right'>
					<span>
           	<%= link_to_remote image_tag('icons/edit.gif',:title=>'Update' ),
           	                    :url => {:action => 'ajax_edit', :id => item.id } %>
                 	<%= link_to_remote image_tag('icons/delete.png',:title=>'Delete' ),
           	                    :url => {:action => 'ajax_delete', :id => item.id }, 
							:confirm => 'Are you sure to delete?' %>
	        </span>
				</td>
			</tr>				
		<%end%>
	</tbody>
</table>
<div class="list-footer"></div>
<div style="clear:both"></div>
